<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="25sp"
        android:background="#eef7f7f7"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_margin="5sp"
            android:layout_weight="7.0">

            <Button
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="10.0"
                android:onClick="Close"
                android:textSize="40.0dip" />

            <TextView
                android:id="@+id/title_dialog"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="90.0"
                android:gravity="center"
                android:text="Large Text"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Button01"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="10.0"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:onClick="Close"
                android:textSize="40.0dip" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_dialog"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_margin="5sp"
            android:layout_weight="40.0"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/matn_dialog"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_margin="5sp"
            android:layout_weight="32.0"
            android:gravity="center"

            android:text="text"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ff000000" />

        <Button
            android:id="@+id/btn_dialog"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_margin="5.0dip"
            android:layout_weight="8.0"
            android:background="#0b94e2"
            android:onClick="Open"
            android:text="..."
            android:textColor="#ffffffff"
            android:textSize="16.0dip"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>